<h1>Your Discounts</h1>

<%= link_to "Create New Bulk Discount", new_merchant_bulk_discount_path(@merchant) %>
<hr>
<body>
  <section id="upcoming-holidays-list">
    <h3>Upcoming Holidays on Year-Month-Day</h3>
    <ul>
      <% @holidays.each do |holiday| %>
        <li>
          <h4><%= holiday[:name] %> on <%= holiday[:date] %></h4>
        </li>
      <% end %>
    </ul>
  
  </section>
  <section id="discount-list">
    <% @bulk_discounts.each do |discount| %>
      <div id="discount-<%= discount.id %>">
        <%= link_to "Buy #{discount.quantity_threshold} of the same item to get %#{discount.percentage_discount} off", merchant_bulk_discount_path(@merchant, discount) %>
        <%= link_to "Delete Discount", merchant_bulk_discount_path(@merchant, discount), method: :delete %>
        <hr>
      </div>
    <% end %>
  </section>

</body>